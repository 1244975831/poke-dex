<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="13dp"
    android:background="@drawable/data_main">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/dback"
        android:layout_margin="5dp"
        />
        <ImageButton
            android:id="@+id/cwimg"
            android:layout_marginTop="10dp"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:background="@drawable/p001"
            android:padding="5dp"
            android:layout_margin="5dp"
             />

</RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            >

            <TextView
                android:id="@+id/chname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="妙蛙种子"
                android:layout_marginTop="4dp"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/jpname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="bulbasuar"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/chname"/>


            <LinearLayout
                android:id="@+id/shuxing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/jpname">
                <Button
                    android:id="@+id/shuxing1"
                    android:layout_width="90dp"
                    android:layout_height="35dp"
                    android:textSize="0.01dp"
                    android:text="h"
                    android:background="@android:color/holo_green_light"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:onClick="shuxing"/>
                <Button
                    android:id="@+id/shuxing2"
                    android:layout_width="90dp"
                    android:layout_height="35dp"
                    android:background="#6f00d2"
                    android:layout_below="@+id/smbkm"
                    android:layout_toRightOf="@id/shuxing1"
                    android:layout_marginLeft="20dp"
                    android:textSize="0.01dp"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    android:onClick="shuxing2"/>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
