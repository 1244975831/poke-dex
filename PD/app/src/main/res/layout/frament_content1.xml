<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/tex"
        android:textSize="20sp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/ability1"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/ab1"
            android:text="茂盛"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="5dp"
            android:paddingTop="3dp"
            android:padding="5dp"
            android:textSize="15sp"
            />

        <TextView
            android:id="@+id/ability2"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/ab1"
            android:gravity="center"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:paddingTop="3dp"
            android:padding="5dp"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/ability3"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/ab3"
            android:text="叶绿素"
            android:gravity="center"
            android:textColor="#fff"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="5dp"
            android:paddingTop="3dp"
            android:padding="5dp"
            android:textSize="15sp"/>
    </LinearLayout>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/zhongz"
        android:textSize="20sp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tl"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:background="#F0F0F0"
                android:text="体力"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:paddingTop="3dp"
                android:padding="5dp"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/hp"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:background="#F0F0F0"
                android:text="45"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:paddingTop="3dp"
                android:padding="5dp"
                android:textSize="15sp"
                />

            <ProgressBar
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/progressBar1"
                android:progressDrawable="@drawable/progressbar_hp"
                android:max="255"
                android:progress="50"
                android:maxHeight="30dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
                >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#F0F0F0"
                android:text="攻击"
                android:gravity="center"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:paddingTop="5dp"
                android:padding="5dp"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/atk"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:background="#F0F0F0"
                android:text="45"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:paddingTop="5dp"
                android:padding="5dp"
                android:textSize="15sp"
                />
            <ProgressBar
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/progressBar2"
                android:progressDrawable="@drawable/progressbar_atk"
                android:max="255"
                android:progress="50"
                android:maxHeight="30dp"
                android:layout_marginTop="5dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#F0F0F0"
                android:text="防御"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:paddingTop="5dp"
                android:padding="5dp"
                android:textSize="15sp"
                />

            <TextView
                android:id="@+id/def"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:background="#F0F0F0"
                android:text="49"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:paddingTop="5dp"
                android:padding="5dp"
                android:textSize="15sp"
                />
            <ProgressBar
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/progressBar3"
                android:progressDrawable="@drawable/progressbar_def"
                android:max="255"
                android:progress="50"
                android:maxHeight="30dp"
                android:layout_marginTop="5dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#F0F0F0"
                android:text="特攻"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:paddingTop="5dp"
                android:padding="5dp"
                android:textSize="15sp"
                />

            <TextView
                android:id="@+id/satk"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:background="#F0F0F0"
                android:text="65"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:paddingTop="5dp"
                android:padding="5dp"
                android:textSize="15sp"
                />
            <ProgressBar
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/progressBar4"
                android:progressDrawable="@drawable/progressbar_satk"
                android:max="255"
                android:progress="50"
                android:maxHeight="30dp"
                android:layout_marginTop="5dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#F0F0F0"
                android:text="特防"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:paddingTop="5dp"
                android:padding="5dp"
                android:textSize="15sp"
                />

            <TextView
                android:id="@+id/sdef"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:background="#F0F0F0"
                android:text="65"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:paddingTop="3dp"
                android:padding="5dp"
                android:textSize="15sp"/>
            <ProgressBar
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/progressBar5"
                android:progressDrawable="@drawable/progressbar_sdef"
                android:max="255"
                android:progress="50"
                android:maxHeight="30dp"
                android:layout_marginTop="5dp"
               />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#F0F0F0"
                android:text="速度"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:paddingTop="3dp"
                android:padding="5dp"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/speed"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:background="#F0F0F0"
                android:text="45"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:paddingTop="3dp"
                android:padding="5dp"
                android:textSize="15sp"/>
            <ProgressBar
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/progressBar6"
                android:progressDrawable="@drawable/progressbar_spd"
                android:max="255"
                android:progress="50"
                android:maxHeight="30dp"
                android:layout_marginTop="5dp"
                />
        </LinearLayout>
    </LinearLayout>
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal">
    <Button
        android:onClick="more"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/more"/>
</LinearLayout>

</LinearLayout>
